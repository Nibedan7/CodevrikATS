/*------------select2 styling-----------------------*/

/* Main container - fixed width */
.select2-container {
    width: 160px !important;
    min-width: 160px !important;
    max-width: 160px !important;
}

    /* Selection box - enforce same width */
    .select2-container .select2-selection--single {
        width: 160px !important;
        min-width: 160px !important;
        max-width: 160px !important;
        border-radius: 8px;
        border: 1px solid #ddd;
        height: 30px;
    }

/* Dropdown options - match exactly */
.select2-dropdown {
    width: 160px !important;
    min-width: 160px !important;
    max-width: 160px !important;
}

/* Search field - match container */
.select2-search__field {
    width: 148px !important; /* 160px - 12px padding each side */
}


/* Style the search bar */
.select2-container--default .select2-search--dropdown .select2-search__field {
    border: 1px solid #ddd !important;
    border-radius: 6px !important;
    padding: 6px 12px !important;
    box-shadow: inset 0 1px 2px rgba(0,0,0,0.1) !important;
    height: 30px;
}


/* Change border color when search input is focused */
.select2-container--default .select2-search--dropdown .select2-search__field:focus {
    border-color: #4a8eff !important;
    box-shadow: 0 0 0 2px rgba(74, 142, 255, 0.5) !important;
    outline: none !important; /* Remove default browser outline */
}

/* Change background color of all options */

.select2-container--default .select2-results__option {
    line-height: 12px !important;
}
    .select2-container--default .select2-results__option:hover {
        background-color: #1a5dc9;
    }

/* Selected option in dropdown (when reopened) */
    .select2-container--default .select2-results__option[aria-selected=true] {
        background-color: #1a5dc9 !important;
    }

/* Glowing effect when select2 is open */
.select2-container--open .select2-selection {
    box-shadow: 0 0 0 5px rgba(74, 142, 255, 0.5) !important;
    transition: box-shadow 0.2s ease-in-out;
}
/* Tab container and content styling */
.tab-content {
    background-color: #ffeded;
    border: 1px solid #ddd !important;
    border-top: none;
    border-radius: 0 8px 8px 8px;
    padding: 15px;
}

/* Outer container style */
.TabSection {
    background: white;
    padding: 15px;
    border-radius: 8px;
    border: 1px solid #ddd;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

/* Default tab style */
.nav-tabs {
    border-bottom: none; /* Remove default bottom border */
    padding-left: 0;
    padding-right: 0;
    margin-bottom: 0;
}

    /* Styling for each tab item */
    .nav-tabs .nav-item {
        margin-bottom: -1px; /* Remove gap between tab items */
    }

    /* Default tab link styling */
    .nav-tabs .nav-link {
        border: 1px solid #ddd;
        border-radius: 5px 5px 0 0;
        margin-right: 0; /* Remove margin between tabs */
        background-color: white;
        color: #333;
    }

        /* Active tab style */
        .nav-tabs .nav-link.active {
            color: #155687 !important;
            background-color: #ffeded;
            border-bottom-color: transparent !important; /* Remove bottom border */
            position: relative;
            z-index: 2;
        }
.nav-tabs .nav-link:hover{
    border : 1px solid #ddd;
}

/*   -----Loader-------   */
#loader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255,255,255,0.1);
    z-index: 9999;
    display: flex;
    justify-content: center;
    align-items: center;
}

.spinner {
    width: 50px;
    height: 50px;
    border: 6px solid #ccc;
    border-top: 6px solid #3498db;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}
