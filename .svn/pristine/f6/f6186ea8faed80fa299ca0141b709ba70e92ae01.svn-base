/* HEADER Section */
.header-section {
    position: relative;
    width: 100%;
    padding: 10px 20px;
    background: white;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden; /* Keeps confetti inside */
}

/* Birthday Message */
.birthday-container {
    position: relative;
    margin-left: 15px;
}

.birthday-message {
    font-size: 16px;
    font-weight: bold;
    color: #ff9800;
    animation: glow 1s infinite alternate;
}

/* Balloons */
.balloons {
    display: flex;
    margin-left: 10px;
}

.balloon {
    width: 15px;
    height: 25px;
    background: red;
    border-radius: 50%;
    position: relative;
    margin: 0 5px;
    animation: float 3s ease-in-out infinite;
}

.balloon1 {
    background: red;
    animation-delay: 0s;
}

.balloon2 {
    background: blue;
    animation-delay: 1s;
}

.disabled {
    pointer-events: none;
    opacity: 0.5;
}

.deletebtn {
    display: none;
}

@keyframes glow {
    from {
        text-shadow: 0 0 5px #ff9800;
    }

    to {
        text-shadow: 0 0 15px #ff5733;
    }
}

@keyframes float {
    0% {
        transform: translateY(0px);
    }

    50% {
        transform: translateY(-10px);
    }

    100% {
        transform: translateY(0px);
    }
}

