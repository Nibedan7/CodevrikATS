@model CdplATS.Entity.Models.ResetPasswordEntity
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        /* Full-page background */
        body {
            background: url('@Url.Content("~/image/LoginBackImage.jpg")') no-repeat center center;
            background-size: cover;
            background-attachment: fixed;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .background-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.3); /* Reduce the darkness */
            z-index: 1;
        }

        /* Login container */
        .login-container {
            position: relative;
            z-index: 2;
            width: 400px;
            background: rgba(255, 255, 255, 0.95); /* Slight transparency */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
        }
        /* Logo styling */
        .logo {
            text-align: center;
            margin-bottom: 20px;
        }

            .logo img {
                width: 120px;
                height: auto;
            }

        /* Login title */
        .login-header {
            text-align: center;
            margin-bottom: 20px;
            color: #155687;
            font-weight: bold;
            font-size: 22px;
        }

        /* Login button */
        .btn-login {
            background-color: #155687;
            color: white;
            border-radius: 5px;
            transition: 0.3s;
        }

            .btn-login:hover {
                background-color: #0e3f5e;
                color: white;
            }

        /* Forgot password link */
        .forgot-password {
            display: block;
            text-align: right;
            margin-top: 10px;
            color: #155687;
            text-decoration: none;
        }

            .forgot-password:hover {
                text-decoration: underline;
            }

        .labelStyle {
            color: #155687;
        }
    </style>
</head>
<body>

    <!-- Dark overlay -->
    <div class="background-overlay"></div>

    <div class="login-container">
        <div class="logo">
            <img src="@Url.Content("~/image/cdpl_logo_new.png")" alt="Company Logo">
        </div>
        <h2 class="login-header">Reset Password</h2>

        <form id="resetpasswordform" method="post" asp-action="Index">
            <input type="hidden" asp-for="EmployeeCode" id="EmployeeCode" />

            <div class="mb-3">
                <div class="form-group">
                    <label asp-for="NewPassword" class="form-label labelStyle"></label>
                    <input type="password" asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>
            
           <div class="mb-3">
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label labelStyle"></label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
           </div>
           

            <button type="submit" class="btn btn-login w-100">Reset Password</button>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }


    </script>
</body>
</html>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            var msg = '@ViewBag.Message';
            if (msg) {
                toastr.success(msg);
            }
        });
    </script>
}



